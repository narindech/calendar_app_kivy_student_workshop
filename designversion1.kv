<SplashScreen>:
    name: "splash"
    AnchorLayout:
        Button:
            size_hint: (.2, .2)
            anchor_x: "center"
            anchor_y: "center"
            background_normal: "assets/kfc.jpg"
            background_down: "assets/kfc.jpg"
            on_release:
                app.root.current = "main"
                root.manager.transition.direction = "left"

